{
  "compilerOptions": {
    "outDir": "build",             // compiled files go here
    "rootDir": "src",              // your TS source lives here
    "module": "ESNext",            // use ES modules
    "target": "ES2020",            // modern JS output
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
